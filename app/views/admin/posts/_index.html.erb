<table class='table table-hover table-inverse'>
  <thead class="thead-light">
    <tr>
      <th></th>
      <th>画像</th>
      <th>ファッション名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to admin_customer_path(post.customer_id) do %>
          <%= image_tag post.customer.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= image_tag post.image, size: "100x100" %></td>
        <td><%= link_to post.title, admin_post_path(post.id) %></td>
        <td>コメント数: <%= post.post_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>