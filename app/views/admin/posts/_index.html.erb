<table class="table">
  <thead class="thead-dark">
    <tr class="text-center">
      <th></th>
      <th>写真</th>
      <th>ファッション名</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr class="text-center">
        <td><%= link_to admin_customer_path(post.customer_id) do %>
          <%= image_tag post.customer.get_profile_image, class: "rounded-circle", size:'50x50' %>
          <% end %>
        </td>
        <td><%= image_tag post.image, size: "100x100" %></td>
        <td><%= link_to post.title, admin_post_path(post.id), class: 'text-dark' %></td>
        <td>コメント数: <%= post.post_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
  <%= paginate posts %>
</div>