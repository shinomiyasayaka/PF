<div class='container'>
  <div class = "row">
    <div class = 'col-10 py-5'>
      <h2>投稿編集</h2>
      <%= form_with model: @post, url: admin_post_path(@post.id), method: :patch do |f| %>
        <%= render 'admin/shared/error_messages', resource: @post %>
          <table class="table table-borderless">
            <tr>
              <td><%= f.label :image, "画像" %></td>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>

            <tr>
              <td><%= f.label :title, "ファッション名" %></td>
              <td><%= f.text_field :title, rows:'5',placeholder: "ファッション名をここに", class: "w-50" %></td>
            </tr>

            <tr>
              <td><%= f.label :body, "コーディネート内容" %></td>
              <td><%= f.text_area :body, rows:'5',placeholder: "コーディネート内容をここに", class: "w-75" %></td>
            </tr>
          </table>
          <%= f.submit "編集内容を保存", class: "btn btn-success px-5" %>
          <%= link_to '投稿詳細へ戻る', admin_post_path(@post.id), class: "btn btn-secondary px-5" %>
      <% end %>
  	</div>
  </div>
</div>