<table class="d-flex justify-content-center">
  <tbody>
    <% post.post_comments.each do |post_comment| %>
      <tr>
        <td class="text-center">
          <%= link_to admin_customer_path(post_comment.customer), class: 'text-dark' do %>
            <%= image_tag post_comment.customer.get_profile_image, size: "30x30" %><br>
            <%= post_comment.customer.name %>
          <% end %>
        </td>
        <td><%= post_comment.comment %></td>
        <td>
            <%= link_to admin_post_post_comment_path(post, post_comment), method: :delete do %>
              <i class="fa-solid fa-trash-can"></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>