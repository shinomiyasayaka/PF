<div class='container'>
  <div class = "row d-flex justify-content-center">
    <div class = 'py-5'>
      <h4 class = "text-center">ログイン</h4>
      <p class ="text-center">会員の方はこちらからログイン</p>

      <%= form_with model: @customer, url: customer_session_path do |f| %>
        <table class="table table-borderless d-flex justify-content-center">
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
          </tr>
          <tr>
            <td><%= f.email_field :email, :size=>"40", autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %></td>
          </tr>

          <tr>
            <td><%= f.label :password, "パスワード" %></td>
          </tr>
          <tr>
            <td><%= f.password_field :password, :size=>"40", autocomplete: "current-password" %></td>
          </tr>

          <tr>
            <td><%= f.submit "ログイン", class: "btn btn-info" %></td>
          </tr>
        </table>
      <% end %>

      <div>
        <h6 class="text-center">登録がお済でない方</h6>
        <div class = "d-flex justify-content-center">
          <%= render 'public/shared/links' %>
        </div>
      </div>
    </div>
  </div>
</div>
