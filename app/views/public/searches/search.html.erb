<% if @model == 'customer' %>
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-8">
        <h3 class="text-center my-4">検索結果 "<%= @content %>"</h3>
          <%= render 'public/customers/index', customers: @records %>
      </div>
    </div>
    <div class="row d-flex justify-content-center my-4">
      <%= link_to 'マイページへ', mypage_path(current_customer.id), class: "btn btn-secondary" %>
    </div>
  </div>
<% elsif @model == 'post' %>
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-8">
        <h3 class="text-center my-4">検索結果 "<%= @content %>"</h3>
          <%= render 'public/posts/index', posts: @records %>
      </div>
    </div>
    <div class="row d-flex justify-content-center my-4">
      <%= link_to 'マイページへ', mypage_path(current_customer.id), class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>