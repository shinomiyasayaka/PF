<table class='table'>
  <thead class="thead-dark">
    <tr class="text-center">
      <th></th>
      <th>写真</th>
      <th>ファッション名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr class="text-center">
        <td><%= link_to mypage_path(post.customer_id) do %>
          <%= image_tag post.customer.get_profile_image, class: "rounded-circle", size:'50x50' %>
          <% end %>
        </td>
        <td><%= image_tag post.image, size: "100x100" %></td>
        <td><%= link_to post.title, post_path(post.id), class: 'text-dark' %></td>
        <td class="favorite-btn_<%= post.id %>">
            <%= render "public/favorites/favorite_btn", post: post %>
        </td>
        <td class="post-comments-counter">
            <%= render "public/post_comments/counter", post: post %>
        </td>
        <td class="view-count">閲覧数: <%= post.view_counts.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
  <%= paginate posts %>
</div>