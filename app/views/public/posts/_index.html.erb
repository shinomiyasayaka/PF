<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Image</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to mypage_path(post.customer_id) do %>
          <%= image_tag post.customer.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td>
          <% if post.image.attached? %>
            <%= image_tag post.image, size: "100x100" %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
        </td>
        <td><%= link_to post.title, post_path(post.id) %></td>
        <td><%= post.body %></td>
        <td><%= render "public/favorites/btn", post: post %></td>
        <td>コメント数: <%= post.post_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>