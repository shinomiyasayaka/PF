<div class='container'>
  <h3>投稿詳細</h3>
  <div class='row'>
    <div class='col-8'>
      <table class="table table-borderless">
        <tr>
          <td>
            <%= link_to mypage_path(@post.customer_id) do %>
                <%= image_tag @post.customer.get_profile_image, size:"50x50" %><br>
                <%= @post.customer.name %>
            <% end %>
          </td>
          <td><%= image_tag @post.image, size: "300x300" %></td>
        </tr>
      </table>

      <table class="table table-borderless">
        <tr>
          <td>ファッション名</td>
          <td><%= link_to @post.title, post_path(@post.id) %></td>
        </tr>
        <tr>
          <td>コーディネート内容</td>
          <td><%= @post.body %></td>
        </tr>
        <tr>
          <td><%= render "public/favorites/btn", post: @post %></td>
          <td>コメント数: <%= @post.post_comments.count %></td>
          <td class="view-count">閲覧数: <%= @post.view_counts.count %></td>
          <% if @post.customer == current_customer %>
            <td><%= link_to '編集', edit_post_path(@post.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to '削除', @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
    </div>

    <div class='col-4'>
      <%= render "public/post_comments/index", post: @post %>
      <%= render "public/post_comments/form", post: @post, post_comment: @post_comment %>
    </div>
  </div>
</div>