<table class="d-flex justify-content-center">
  <tbody>
    <% post_comments.each do |post_comment| %>
      <tr>
        <td class="text-center">
          <%= link_to mypage_path(post_comment.customer), class: 'text-dark' do %>
            <%= image_tag post_comment.customer.get_profile_image, class: "rounded-circle", size: "30x30" %><br>
            <%= post_comment.customer.name %>
          <% end %>
        </td>
        <td><%= post_comment.comment %></td>
        <td>
          <% if post_comment.customer == current_customer %>
            <%= link_to post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true do %>
              <i class="fa-solid fa-trash-can"></i>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>