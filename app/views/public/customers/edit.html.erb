<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @customer, url: update_information_path(@customer.id), method: :patch do |f| %>
        <%= render 'public/shared/error_messages', resource: @customer %>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :profile_image, class: "form-control-file customer_image", accept: 'image/*' %>
          </div>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control name" %>
          </div>
          <div class="form-group">
            <%= f.submit class: 'btn btn-secondary' %>
          </div>
      <% end %>
    </div>
  </div>
</div>
