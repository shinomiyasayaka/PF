<table class="table">
    <thead class="thead-light">
      <tr>
        <th>icon</th>
        <th><i class="fa-regular fa-user"></i>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% customers.each do |customer| %>
        <tr>
          <td><%= image_tag customer.get_profile_image, size: '50x50' %></td>
          <td><%= customer.name %></td>
          <td class="relationship_<%= customer.id %>">
            <%= render "public/relationships/btn", customer: customer %>
          </td>
          <td><%= link_to '詳細', mypage_path(customer), class: "btn btn-secondary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>