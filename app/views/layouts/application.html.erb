<!DOCTYPE html>
<html>
  <head>
    <title>シェアファッション</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/5b87abe1b8.js" crossorigin="anonymous"></script>
    <%#= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="<%= (admin_signed_in? ? "admin_header" : "" ) %>">
      <nav class="navbar navbar-expand-lg", style="background-color: #f5da81; color: black;">
        <div class="container">
          <%= link_to 'ShareFashion', (admin_signed_in? ? admin_top_path : root_path ), class: "logo" %>

              <div class="ml-auto">

                <div class="links">
                  <ul class="navbar-nav">
                    <% if admin_signed_in? %>
                      <li>
                        <%= link_to admin_posts_path,class: 'nav-link text-dark' do %>
                          <i class="fa-solid fa-file-image"></i>投稿一覧
                        <% end %>
                      </li>
                      <li>
                        <%= link_to admin_customers_path,class: 'nav-link text-dark' do %>
                          <i class="fa-solid fa-user"></i>会員一覧
                        <% end %>
                      </li>
                      <li>
                        <%= link_to destroy_admin_session_path, method: :delete,class: 'nav-link text-dark' do %>
                          <i class="fa-solid fa-right-from-bracket"></i>ログアウト
                        <% end %>
                      </li>
                    <% elsif customer_signed_in? %>
                      <li>
                        <%= link_to mypage_path(current_customer.id),class: 'nav-link text-dark' do %>
                          <i class="fa-solid fa-house"></i>マイページ
                        <% end %>
                      </li>
                      <li>
                        <%= link_to posts_path,class: 'nav-link text-dark' do %>
                          <i class="fa-regular fa-file-image"></i>投稿一覧
                        <% end %>
                      </li>
                      <li>
                        <%= link_to list_path,class: 'nav-link text-dark' do %>
                          <i class="fa-regular fa-user"></i>会員一覧
                        <% end %>
                      </li>
                      <li>
                        <%= link_to customer_favorites_path(current_customer),class: 'nav-link text-dark' do %>
                          <i class="fa-regular fa-heart"></i>お気に入り投稿一覧
                        <% end %>
                      </li>
                      <li>
                        <%= link_to new_post_path,class: 'nav-link text-dark' do %>
                          <i class="fa-solid fa-file-pen"></i>新規投稿
                        <% end %>
                      </li>
                      <li>
                        <%= link_to destroy_customer_session_path, method: :delete,class: 'nav-link text-dark' do %>
                          <i class="fa-solid fa-right-from-bracket"></i>ログアウト
                        <% end %>
                      </li>
                    <% else %>
                      <li>
                        <%= link_to new_customer_registration_path,class: 'nav-link text-dark' do %>
                          <i class="fa-solid fa-hands"></i>新規登録
                        <% end %>
                      </li>
                      <li>
                        <%= link_to new_customer_session_path,class: 'nav-link text-dark' do %>
                          <i class="fa-solid fa-right-to-bracket"></i>ログイン
                        <% end %>
                      </li>
                    <% end %>
                  </ul>
                </div>

                <div class="search-box float-right">
                  <%= render 'public/searches/form' %>
                </div>

              </div>
        </div>
      </nav>
    </header>

    <main>
      <%= flash[:notice] %>
      <%= yield %>
    </main>

    <footer style="padding-top: 70px; background-color: #f7d358;">
      <div class='container mt-5'>
      	<div class='row'>
        	<div class='mx-auto'></div>
        </div>
      </div>
    </footer>
  </body>
</html>
